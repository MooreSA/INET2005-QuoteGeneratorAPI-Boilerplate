@model Quote

<div class="row">
    <h1>Add a new Quote</h1>
</div>
<div class="row">
    <form enctype="multipart/form-data" method="post" asp-controller="QuoteAdmin" asp-action="AddQuote">
        <div class="form-group">
            <label asp-for="Content">Quote</label>
            <input type="text" class="form-control" id="quote" asp-for="Content" value="@Model.Content" placeholder="Quote Text">
        </div>
        <div class="form-group">
            <label asp-for="Author">Author</label>
            <input type="text" class="form-control" id="author" asp-for="Author" value="@Model.Author" placeholder="Author">
        </div>
        <div class="form-group">
            <label asp-for="PermaLink">PermaLink</label>
            <input type="text" class="form-control" id="permaLink" asp-for="PermaLink" value="@Model.PermaLink" placeholder="Link to Quote">
        </div>
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input type="file" id="image" asp-for="Image" placeholder="Image">
        </div>
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
</div>